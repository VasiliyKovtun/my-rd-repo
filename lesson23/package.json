{
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@stylistic/eslint-plugin-ts": "^4.4.1",
    "@types/node": "^24.10.1",
    "allure-commandline": "^2.36.0",
    "allure-playwright": "^3.4.3",
    "eslint": "^9.39.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "^16.5.0",
    "prettier": "^3.7.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "scripts": {
    "test": "npx playwright test",
    "allure:generate": "npx allure generate ./allure-results --clean -o ./allure-report",
    "allure:generate-single": "npx allure generate --single-file ./allure-results --clean -o ./allure-report",
    "allure:serve": "npx http-server ./allure-report -p 8080",
    "allure:open": "npx allure serve ./allure-results",
    "test:allure": "npm run test && npm run allure:generate-single && echo \"\\nAllure report: file://$(pwd)/allure-report/index.html\""
  }
}
